<body>
    <div class="container">
        <div class="header">
            <div class="header-icon">
                <i class="fas fa-user-shield"></i>
            </div>
            <h1>نظام إدارة نتائج الاعتراضات</h1>
            <p>أدخل بيانات الطلاب ونتائج الاعتراضات</p>
        </div>
        
        <div class="tabs">
            <div class="tab active" data-tab="add">إضافة بيانات جديدة</div>
            <div class="tab" data-tab="view">عرض السجلات</div>
            <div class="tab" data-tab="search">الانتقال للاستعلام</div>
        </div>
        
        <div class="success-message" id="successMessage">
            <i class="fas fa-check-circle"></i> تم حفظ البيانات بنجاح!
        </div>
        
        <div class="tab-content active" id="addTab">
            <div class="form-container">
                <h2 style="color: #1a2a6c; margin-bottom: 20px;">بيانات الطالب</h2>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label for="studentName"><i class="fas fa-user"></i> الاسم الثلاثي</label>
                        <input type="text" id="studentName" placeholder="أدخل الاسم الثلاثي">
                    </div>
                    
                    <div class="form-group">
                        <label for="branch"><i class="fas fa-code-branch"></i> الفرع</label>
                        <select id="branch">
                            <option value="">اختر الفرع</option>
                            <option value="علمي">علمي</option>
                            <option value="أدبي">أدبي</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="subscriptionNumber"><i class="fas fa-id-card"></i> رقم الاكتتاب</label>
                        <input type="text" id="subscriptionNumber" placeholder="أدخل رقم الاكتتاب">
                    </div>
                </div>
                
                <div class="subjects-section">
                    <div class="subject-header">
                        <h3>المواد المعترض عليها</h3>
                        <button class="add-subject" id="addSubjectBtn">
                            <i class="fas fa-plus"></i> إضافة مادة
                        </button>
                    </div>
                    
                    <div id="subjectsContainer">
                        <!-- المواد ستضاف هنا ديناميكياً -->
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button class="btn btn-primary" id="saveBtn">
                        <i class="fas fa-save"></i> حفظ البيانات
                    </button>
                    <button class="btn btn-secondary" id="clearBtn">
                        <i class="fas fa-broom"></i> مسح النموذج
                    </button>
                </div>
            </div>
        </div>
        
        <div class="tab-content" id="viewTab">
            <h2 style="color: #1a2a6c; margin-bottom: 20px;">سجلات الطلاب</h2>
            
            <div id="recordsList">
                <!-- السجلات ستظهر هنا -->
            </div>
        </div>
        
        <div class="tab-content" id="searchTab">
            <div style="text-align: center; padding: 40px;">
                <i class="fas fa-search" style="font-size: 80px; color: #1a2a6c; margin-bottom: 20px;"></i>
                <h2 style="color: #1a2a6c; margin-bottom: 15px;">الانتقال إلى صفحة الاستعلام</h2>
                <p style="color: #666; margin-bottom: 30px; font-size: 18px;">
                    انقر على الزر أدناه للانتقال إلى صفحة استعلام الطلاب عن نتائج الاعتراضات
                </p>
                <button class="btn btn-primary" id="goToSearchBtn">
                    <i class="fas fa-external-link-alt"></i> الانتقال إلى صفحة الاستعلام
                </button>
            </div>
        </div>
        
        <div class="footer">
            <p>جميع الحقوق محفوظة © 2025 - نظام إدارة نتائج الاعتراضات</p>
        </div>
    </div>

    <script>
        // بيانات التخزين
        let protestRecords = JSON.parse(localStorage.getItem('protestRecords')) || [];
        let subjectCount = 0;
        
        // عناصر DOM
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');
        const subjectsContainer = document.getElementById('subjectsContainer');
        const addSubjectBtn = document.getElementById('addSubjectBtn');
        const saveBtn = document.getElementById('saveBtn');
        const clearBtn = document.getElementById('clearBtn');
        const recordsList = document.getElementById('recordsList');
        const goToSearchBtn = document.getElementById('goToSearchBtn');
        const successMessage = document.getElementById('successMessage');
        
        // إدارة التبويبات
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabId = tab.getAttribute('data-tab');
                
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(tabId + 'Tab').classList.add('active');
                
                if (tabId === 'view') {
                    displayRecords();
                }
            });
        });
        
        // إضافة مادة جديدة
        addSubjectBtn.addEventListener('click', () => {
            subjectCount++;
            const subjectHTML = `
                <div class="subject-item" id="subject-${subjectCount}">
                    <div class="subject-item-header">
                        <div class="subject-title">المادة ${subjectCount}</div>
                        <button class="remove-subject" onclick="removeSubject(${subjectCount})">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="subject-form-grid">
                        <div class="form-group">
                            <label for="subjectName-${subjectCount}">اسم المادة</label>
                            <input type="text" id="subjectName-${subjectCount}" placeholder="أدخل اسم المادة">
                        </div>
                        <div class="form-group">
                            <label for="protestResult-${subjectCount}">نتيجة الاعتراض</label>
                            <input type="number" id="protestResult-${subjectCount}" placeholder="أدخل نتيجة الاعتراض">
                        </div>
                        <div class="form-group">
                            <label for="finalGrade-${subjectCount}">الدرجة النهائية</label>
                            <input type="number" id="finalGrade-${subjectCount}" placeholder="أدخل الدرجة النهائية">
                        </div>
                        <div class="form-group">
                            <label for="details-${subjectCount}">التفاصيل</label>
                            <input type="text" id="details-${subjectCount}" placeholder="أدخل التفاصيل">
                        </div>
                    </div>
                </div>
            `;
            
            subjectsContainer.insertAdjacentHTML('beforeend', subjectHTML);
        });
        
        // إزالة مادة
        window.removeSubject = (id) => {
            const subjectElement = document.getElementById(`subject-${id}`);
            if (subjectElement) {
                subjectElement.remove();
            }
        };
        
        // حفظ البيانات
        saveBtn.addEventListener('click', () => {
            const studentName = document.getElementById('studentName').value.trim();
            const branch = document.getElementById('branch').value;
            const subscriptionNumber = document.getElementById('subscriptionNumber').value.trim();
            
            if (!studentName || !branch || !subscriptionNumber) {
                alert('يرجى ملء جميع بيانات الطالب الأساسية');
                return;
            }
            
            // جمع بيانات المواد
            const subjects = [];
            for (let i = 1; i <= subjectCount; i++) {
                const subjectElement = document.getElementById(`subject-${i}`);
                if (subjectElement) {
                    const subjectName = document.getElementById(`subjectName-${i}`).value.trim();
                    const protestResult = document.getElementById(`protestResult-${i}`).value.trim();
                    const finalGrade = document.getElementById(`finalGrade-${i}`).value.trim();
                    const details = document.getElementById(`details-${i}`).value.trim();
                    
                    if (subjectName) {
                        subjects.push({
                            subject: subjectName,
                            protestResult: protestResult || 0,
                            finalGrade: finalGrade || 0,
                            details: details || '1'
                        });
                    }
                }
            }
            
            if (subjects.length === 0) {
                alert('يرجى إضافة مادة واحدة على الأقل');
                return;
            }
            
            // إنشاء كائن البيانات
            const record = {
                id: Date.now(),
                name: studentName,
                branch: branch,
                subscription: subscriptionNumber,
                subjects: subjects,
                date: new Date().toLocaleString('ar-EG')
            };
            
            // إضافة إلى التخزين
            protestRecords.push(record);
            localStorage.setItem('protestRecords', JSON.stringify(protestRecords));
            
            // إظهار رسالة النجاح
            successMessage.style.display = 'block';
            setTimeout(() => {
                successMessage.style.display = 'none';
            }, 3000);
            
            // مسح النموذج
            clearForm();
            
            // التبديل إلى تبويب العرض
            tabs.forEach(t => t.classList.remove('active'));
            tabContents.forEach(content => content.classList.remove('active'));
            
            document.querySelector('.tab[data-tab="view"]').classList.add('active');
            document.getElementById('viewTab').classList.add('active');
            
            displayRecords();
        });
        
        // مسح النموذج
        clearBtn.addEventListener('click', clearForm);
        
        function clearForm() {
            document.getElementById('studentName').value = '';
            document.getElementById('branch').value = '';
            document.getElementById('subscriptionNumber').value = '';
            subjectsContainer.innerHTML = '';
            subjectCount = 0;
        }
        
        // عرض السجلات
        function displayRecords() {
            if (protestRecords.length === 0) {
                recordsList.innerHTML = `
                    <div class="no-records">
                        <i class="fas fa-inbox"></i>
                        <p>لا توجد سجلات مضافة حتى الآن</p>
                    </div>
                `;
                return;
            }
            
            let tableHTML = `
                <table class="records-table">
                    <thead>
                        <tr>
                            <th width="20%">الاسم الثلاثي</th>
                            <th width="15%">الفرع</th>
                            <th width="15%">رقم الاكتتاب</th>
                            <th width="20%">عدد المواد</th>
                            <th width="20%">تاريخ الإضافة</th>
                            <th width="10%">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            protestRecords.forEach(record => {
                tableHTML += `
                    <tr>
                        <td>${record.name}</td>
                        <td>${record.branch}</td>
                        <td>${record.subscription}</td>
                        <td>${record.subjects.length} مادة</td>
                        <td>${record.date}</td>
                        <td class="action-cell">
                            <button class="edit-btn" onclick="editRecord(${record.id})">
                                <i class="fas fa-edit"></i> تعديل
                            </button>
                            <button class="delete-btn" onclick="deleteRecord(${record.id})">
                                <i class="fas fa-trash"></i> حذف
                            </button>
                        </td>
                    </tr>
                `;
            });
            
            tableHTML += `</tbody></table>`;
            recordsList.innerHTML = tableHTML;
        }
        
        // الانتقال إلى صفحة الاستعلام
        goToSearchBtn.addEventListener('click', () => {
            // في تطبيق حقيقي، سننقل المستخدم إلى صفحة الاستعلام
            // هنا سنعرض رسالة توضيحية
            alert('في التطبيق النهائي، سيتم نقل المستخدم إلى صفحة استعلام الطلاب عن نتائج الاعتراضات');
            
            // يمكنك استبدال هذا السطر بالانتقال الفعلي للصفحة:
            // window.location.href = 'search-page.html';
        });
        
        // وظائف التعديل والحذف
        window.editRecord = (id) => {
            const record = protestRecords.find(r => r.id === id);
            if (record) {
                // ملء النموذج بالبيانات
                document.getElementById('studentName').value = record.name;
                document.getElementById('branch').value = record.branch;
                document.getElementById('subscriptionNumber').value = record.subscription;
                
                // مسح المواد الحالية وإضافة المواد من السجل
                subjectsContainer.innerHTML = '';
                subjectCount = 0;
                
                record.subjects.forEach(subject => {
                    subjectCount++;
                    const subjectHTML = `
                        <div class="subject-item" id="subject-${subjectCount}">
                            <div class="subject-item-header">
                                <div class="subject-title">المادة ${subjectCount}</div>
                                <button class="remove-subject" onclick="removeSubject(${subjectCount})">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="subject-form-grid">
                                <div class="form-group">
                                    <label for="subjectName-${subjectCount}">اسم المادة</label>
                                    <input type="text" id="subjectName-${subjectCount}" value="${subject.subject}">
                                </div>
                                <div class="form-group">
                                    <label for="protestResult-${subjectCount}">نتيجة الاعتراض</label>
                                    <input type="number" id="protestResult-${subjectCount}" value="${subject.protestResult}">
                                </div>
                                <div class="form-group">
                                    <label for="finalGrade-${subjectCount}">الدرجة النهائية</label>
                                    <input type="number" id="finalGrade-${subjectCount}" value="${subject.finalGrade}">
                                </div>
                                <div class="form-group">
                                    <label for="details-${subjectCount}">التفاصيل</label>
                                    <input type="text" id="details-${subjectCount}" value="${subject.details}">
                                </div>
                            </div>
                        </div>
                    `;
                    
                    subjectsContainer.insertAdjacentHTML('beforeend', subjectHTML);
                });
                
                // حذف السجل القديم
                protestRecords = protestRecords.filter(r => r.id !== id);
                localStorage.setItem('protestRecords', JSON.stringify(protestRecords));
                
                // التبديل إلى تبويب الإضافة
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));
                
                document.querySelector('.tab[data-tab="add"]').classList.add('active');
                document.getElementById('addTab').classList.add('active');
                
                alert('تم تحميل البيانات للتعديل. بعد التعديل انقر على "حفظ البيانات"');
            }
        };
        
        window.deleteRecord = (id) => {
            if (confirm('هل أنت متأكد من حذف هذا السجل؟')) {
                protestRecords = protestRecords.filter(r => r.id !== id);
                localStorage.setItem('protestRecords', JSON.stringify(protestRecords));
                displayRecords();
            }
        };
        
        // التهيئة الأولية
        document.addEventListener('DOMContentLoaded', () => {
            // إضافة مادة افتراضية عند التحميل
            addSubjectBtn.click();
        });
    </script>
</body>
</html>